<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.page.VarietyshowrankFragment">

    <data>

        <variable
            name="vm"
            type="com.qxy.mzbzy.ui.page.TvseriesrankFragment.TvseriesrankViewModel" />

        <variable
            name="click"
            type="com.qxy.mzbzy.ui.page.TvseriesrankFragment.ClickProxy" />
        <variable
            name="adapter"
            type="com.qxy.mzbzy.ui.page.TvseriesrankFragment.MAdapter" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/dyjjb"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adapter="@{adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_movies" />

        </LinearLayout>
    </ScrollView>
</layout>